<main>

	{.repeated section collection.collections}

		<section>

			<figure>

				{.section mainImage}
					<div class="content-fill">
						<img {@|image-meta}>
					</div>
				{.end}

				<figcaption>
					<h1>{title}</h1>
					{description}
				</figcaption>

			</figure>

			<div>

				{mainContent}

			</div>

		</section>

	{.end}

</main>
