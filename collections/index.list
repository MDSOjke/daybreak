<main>

	{.repeated section collection.collections}

		<section>

			<a name="{urlId}"></a>

			<figure>

				{.section mainImage}
					<div class="content-fill">
						<img {@|image-meta}>
					</div>
				{.end}

				<figcaption>
					<h1>{title}</h1>
					{description}
					<squarespace:block-field id="index-caption-{id}" columns="1">
				</figcaption>

			</figure>

			<div data-website-title="{website.siteTitle}">

				{mainContent}

			</div>

		</section>

	{.end}

</main>
